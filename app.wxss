@import 'assets/wxss/font-awesome.wxss';
@import 'assets/wxss/flex.wxss';

.color-main {
  color: #f7c223;
}

.color-assist {
  color: #a06c08;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

view, input, text, i {
  font-size: 28rpx;
  color: #999999;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  background: #F0F0F0;
}

.btn-none {
  border: none;
  line-height: normal;
  background: none;
}
.btn image{
 margin-right: 15rpx;
}
.text-right {
  text-align: right;
}

.text-center {
  text-align: center;
}

.navigator-hover {
  opacity: 0.5;
}
button::after {
  content: " ";
  border: 1px solid rgba(0, 0, 0, 0);
}
.foot{
  text-align: center;
  padding: 20rpx 0;
}
.banner0{
  width: 100%;
  height: 230rpx;
}
.banner{
  z-index:100;
}