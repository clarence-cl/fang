/* pages/personalCenter/personalCenter.wxss */
.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
}

.banner {
  width: 100%;
  height: 230rpx;
  font-size: 80rpx;
  color: #505050;
  text-align: center;
  line-height: 230rpx;
  background-image: url(http://fangyansici.oss-cn-shenzhen.aliyuncs.com/18-4-13/28533846.jpg);
  background-size: cover;
  background-repeat: no-repeat;
  background-color: #ededed;
  position: fixed;
  top: 0;
  left: 0;
}

.content {
  width: 100%;
  overflow: hidden;
}

.list {
  height: 143rpx;
  width: 696rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
}

.list image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.rbox {
  width: 580rpx;
  margin-left: 27rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.rbox label, .author, .box label {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.peotrytitle {
  font-size: 33rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 370rpx;
}

.fa-heart-o {
  margin-left: 13rpx;
}

.fa-heart-o, .rbox label text:nth-child(2), .author text {
  font-size: 25rpx;
  color: #aaa;
}

.history .rbox {
  width: 545rpx;
}

.historyIdex {
  margin-right: 35rpx;
  font-size: 33rpx;
  color: #333;
}
